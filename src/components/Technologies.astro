---
import Icons from "./Icons.astro";
import SpotlightCard from "../components/ui/SpotlightCard";
import { technologies } from "@/data/technologies";
---

<section
  id="tecnologias"
  class="relative overflow-hidden bg-white py-24 md:py-32 dark:bg-[#020617]"
>
  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-20">
      <div class="flex flex-col justify-between gap-6 md:flex-row md:items-end">
        <div class="max-w-2xl">
          <span
            class="mb-4 inline-block rounded-full bg-blue-50 px-4 py-1.5 text-xs font-bold tracking-widest text-blue-600 uppercase dark:bg-blue-900/30 dark:text-blue-300"
          >
            Nuestras Herramientas
          </span>
          <h2
            class="text-4xl leading-tight font-black text-slate-900 md:text-5xl dark:text-white"
          >
            Stack de <span
              class="bg-gradient-to-r from-blue-600 to-indigo-500 bg-clip-text font-extrabold text-transparent"
              >vanguardia tecnológica</span
            >
          </h2>
        </div>
        <p
          class="border-l-2 border-blue-600 pl-6 text-lg text-slate-600 md:max-w-xs dark:text-slate-400"
        >
          Seleccionamos solo lo mejor para garantizar velocidad y escalabilidad.
        </p>
      </div>
    </div>

    <div class="grid gap-10 md:grid-cols-3">
      <div class="flex flex-col gap-6">
        <h3
          class="flex items-center gap-3 text-xl font-bold text-slate-800 dark:text-slate-200"
        >
          <div class="h-1.5 w-8 rounded-full bg-blue-600"></div>
          Ecosistema Web
        </h3>
        <div class="grid grid-cols-2 gap-4">
          {
            technologies.web.map((tech) => (
              <SpotlightCard
                client:visible
                className="group/card relative rounded-2xl border border-slate-200 bg-slate-50 p-4 transition-all hover:border-blue-500/50 dark:border-slate-800 dark:bg-slate-900/40"
                spotlightColor="rgba(59, 130, 246, 0.2)"
              >
                <div class="flex flex-col gap-3">
                  <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-white p-2 shadow-sm transition-transform group-hover/card:scale-110 dark:bg-slate-800">
                    <Icons
                      name={tech.icon}
                      class="h-full w-full object-contain"
                    />
                  </div>
                  <div>
                    <p class="text-sm leading-tight font-bold text-slate-900 dark:text-white">
                      {tech.name}
                    </p>
                    <p class="mt-1 text-[10px] font-semibold tracking-wider text-blue-600 uppercase dark:text-blue-400">
                      {tech.category}
                    </p>
                  </div>
                </div>
              </SpotlightCard>
            ))
          }
        </div>
      </div>

      <div class="flex flex-col gap-6">
        <h3
          class="flex items-center gap-3 text-xl font-bold text-slate-800 dark:text-slate-200"
        >
          <div class="h-1.5 w-8 rounded-full bg-teal-500"></div>
          Apps Móviles
        </h3>
        <div class="flex flex-col gap-4">
          {
            technologies.mobile.map((tech) => (
              <SpotlightCard
                client:visible
                className="group/card rounded-2xl border border-slate-200 bg-slate-50 p-5 transition-all hover:border-teal-500/50 dark:border-slate-800 dark:bg-slate-900/40"
                spotlightColor="rgba(59, 130, 246, 0.2)"
              >
                <div class="flex items-center gap-5">
                  <div class="flex h-16 w-16 flex-shrink-0 items-center justify-center rounded-xl bg-white p-3 shadow-sm dark:bg-slate-800">
                    <Icons
                      name={tech.icon}
                      class="h-full w-full object-contain"
                    />
                  </div>
                  <div>
                    <p class="text-lg font-bold text-slate-900 dark:text-white">
                      {tech.name}
                    </p>
                    <p class="text-xs font-semibold text-teal-600 dark:text-teal-400">
                      {tech.category}
                    </p>
                  </div>
                </div>
              </SpotlightCard>
            ))
          }
        </div>
      </div>

      <div class="flex flex-col gap-6">
        <h3
          class="flex items-center gap-3 text-xl font-bold text-slate-800 dark:text-slate-200"
        >
          <div class="h-1.5 w-8 rounded-full bg-indigo-600"></div>
          Automatización
        </h3>
        <div class="flex flex-col gap-4">
          {
            technologies.automation.map((tech) => (
              <SpotlightCard
                client:visible
                className="group/card rounded-2xl border border-slate-200 bg-slate-50 p-5 transition-all hover:border-indigo-500/50 dark:border-slate-800 dark:bg-slate-900/40"
                spotlightColor="rgba(59, 130, 246, 0.2)"
              >
                <div class="flex items-center gap-5">
                  <div class="flex h-16 w-16 flex-shrink-0 items-center justify-center rounded-xl bg-white p-3 shadow-sm dark:bg-slate-800">
                    <Icons
                      name={tech.icon}
                      class="h-full w-full object-contain"
                    />
                  </div>
                  <div>
                    <p class="text-lg font-bold text-slate-900 dark:text-white">
                      {tech.name}
                    </p>
                    <p class="text-xs font-semibold text-indigo-600 dark:text-indigo-400">
                      {tech.category}
                    </p>
                  </div>
                </div>
              </SpotlightCard>
            ))
          }
          <div
            class="relative mt-auto overflow-hidden rounded-2xl bg-gradient-to-br from-blue-600 to-indigo-700 p-6 text-white shadow-lg"
          >
            <p class="relative z-10 text-sm font-bold italic">
              ¿Necesitas algo más?
            </p>
            <p class="relative z-10 mt-1 text-[10px] opacity-80">
              Dominamos más herramientas.
            </p>
            <div class="absolute -right-6 -bottom-6 rotate-12 opacity-10">
              <Icons name="react" class="h-24 w-24" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
