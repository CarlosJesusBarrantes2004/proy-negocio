---
import Icons from "./Icons.astro";

const technologies = {
  web: [
    { name: "Astro", category: "Frontend", icon: "astro" },
    { name: "Vue", category: "Frontend", icon: "vue" },
    { name: "Nuxt", category: "Frontend", icon: "nuxt" },
    { name: "React", category: "Frontend", icon: "react" },
    { name: "Next.js", category: "Frontend", icon: "next" },
    { name: "Django", category: "Backend", icon: "django" },
  ],
  mobile: [
    { name: "Flutter", category: "Híbrido", icon: "flutter" },
    { name: "React Native", category: "Nativo", icon: "expo" },
  ],
  automation: [
    { name: "Python", category: "Scripts", icon: "python" },
    { name: "n8n", category: "Workflows", icon: "n8n" },
  ],
};
---

<section
  id="tecnologias"
  class="bg-card/50 border-border border-y py-20 md:py-32"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <h2 class="text-foreground text-3xl font-bold sm:text-4xl">
        Stack Tecnológico
      </h2>
      <p class="text-muted-foreground mx-auto mt-4 max-w-2xl text-lg">
        Utilizamos las herramientas más modernas y eficientes del mercado
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      <div class="space-y-4">
        <h3
          class="text-foreground flex items-center gap-2 text-lg font-semibold"
        >
          <span class="bg-primary h-2 w-2 rounded-full"></span>
          Desarrollo Web
        </h3>
        <div class="grid grid-cols-2 gap-3">
          {
            technologies.web.map((tech) => (
              <div class="bg-background border-border hover:border-primary/50 group rounded-lg border p-4 transition-all hover:shadow-sm">
                <div class="flex items-center gap-3">
                  <Icons
                    name={tech.icon}
                    class="text-muted-foreground group-hover:text-primary h-8 w-8 transition-colors"
                  />
                  <div>
                    <div class="text-foreground leading-none font-medium">
                      {tech.name}
                    </div>
                    <div class="text-muted-foreground mt-1 text-xs">
                      {tech.category}
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="space-y-4">
        <h3
          class="text-foreground flex items-center gap-2 text-lg font-semibold"
        >
          <span class="bg-primary h-2 w-2 rounded-full"></span>
          Desarrollo Móvil
        </h3>
        <div class="grid gap-3">
          {
            technologies.mobile.map((tech) => (
              <div class="bg-background border-border hover:border-primary/50 group rounded-lg border p-4 transition-all hover:shadow-sm">
                <div class="flex items-center gap-3">
                  <Icons
                    name={tech.icon}
                    class="text-muted-foreground group-hover:text-primary h-8 w-8 transition-colors"
                  />
                  <div>
                    <div class="text-foreground leading-none font-medium">
                      {tech.name}
                    </div>
                    <div class="text-muted-foreground mt-1 text-xs">
                      {tech.category}
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="space-y-4">
        <h3
          class="text-foreground flex items-center gap-2 text-lg font-semibold"
        >
          <span class="bg-primary h-2 w-2 rounded-full"></span>
          Automatización
        </h3>
        <div class="grid gap-3">
          {
            technologies.automation.map((tech) => (
              <div class="bg-background border-border hover:border-primary/50 group rounded-lg border p-4 transition-all hover:shadow-sm">
                <div class="flex items-center gap-3">
                  <Icons
                    name={tech.icon}
                    class="text-muted-foreground group-hover:text-primary h-8 w-8 transition-colors"
                  />
                  <div>
                    <div class="text-foreground leading-none font-medium">
                      {tech.name}
                    </div>
                    <div class="text-muted-foreground mt-1 text-xs">
                      {tech.category}
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
