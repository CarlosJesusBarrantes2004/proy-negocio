---
// 1. Script Frontmatter (Se ejecuta en el servidor/build time)

// Definición de datos
const technologies = {
  web: [
    { name: "Astro", category: "Frontend" },
    { name: "Vue", category: "Frontend" },
    { name: "Nuxt", category: "Frontend" },
    { name: "React", category: "Frontend" },
    { name: "Next.js", category: "Frontend" },
    { name: "Django", category: "Backend" },
  ],
  mobile: [
    { name: "Flutter", category: "Híbrido" },
    { name: "iOS", category: "Nativo" },
    { name: "Android", category: "Nativo" },
  ],
  automation: [
    { name: "Python", category: "Scripts" },
    { name: "n8n", category: "Workflows" },
  ],
};
---

<section
  id="tecnologias"
  class="bg-card/50 border-border border-y py-20 md:py-32"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <h2 class="text-foreground text-3xl font-bold sm:text-4xl">
        Stack Tecnológico
      </h2>
      <p class="text-muted-foreground mx-auto mt-4 max-w-2xl text-lg">
        Utilizamos las herramientas más modernas y eficientes del mercado
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      <div class="space-y-4">
        <h3
          class="text-foreground flex items-center gap-2 text-lg font-semibold"
        >
          <span class="bg-primary h-2 w-2 rounded-full"></span>
          Desarrollo Web
        </h3>
        <div class="grid grid-cols-2 gap-3">
          {
            technologies.web.map((tech, index) => (
              <div
                key={index}
                class="bg-background border-border hover:border-primary/50 rounded-lg border p-4 transition-colors"
              >
                <div class="text-foreground font-medium">{tech.name}</div>
                <div class="text-muted-foreground text-xs">{tech.category}</div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="space-y-4">
        <h3
          class="text-foreground flex items-center gap-2 text-lg font-semibold"
        >
          <span class="bg-primary h-2 w-2 rounded-full"></span>
          Desarrollo Móvil
        </h3>
        <div class="grid gap-3">
          {
            technologies.mobile.map((tech, index) => (
              <div
                key={index}
                class="bg-background border-border hover:border-primary/50 rounded-lg border p-4 transition-colors"
              >
                <div class="text-foreground font-medium">{tech.name}</div>
                <div class="text-muted-foreground text-xs">{tech.category}</div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="space-y-4">
        <h3
          class="text-foreground flex items-center gap-2 text-lg font-semibold"
        >
          <span class="bg-primary h-2 w-2 rounded-full"></span>
          Automatización
        </h3>
        <div class="grid gap-3">
          {
            technologies.automation.map((tech, index) => (
              <div
                key={index}
                class="bg-background border-border hover:border-primary/50 rounded-lg border p-4 transition-colors"
              >
                <div class="text-foreground font-medium">{tech.name}</div>
                <div class="text-muted-foreground text-xs">{tech.category}</div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
