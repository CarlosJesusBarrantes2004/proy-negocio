---
import { Code2, Github, Linkedin, ExternalLink } from "lucide-react";

const footerLinks = {
  servicios: [
    { label: "Desarrollo Web", href: "#servicios" },
    { label: "Desarrollo Móvil", href: "#servicios" },
    { label: "Automatización", href: "#servicios" },
    { label: "Consultoría", href: "#contacto" },
  ],
  empresa: [
    { label: "Nosotros", href: "#nosotros" },
    { label: "Proyectos", href: "#catalogo" },
    { label: "Contacto", href: "#contacto" },
  ],
  legal: [
    { label: "Privacidad", href: "/privacidad" },
    { label: "Términos", href: "/terminos" },
  ],
};

const currentYear = new Date().getFullYear();
---

<footer
  class="relative border-t border-slate-200 bg-white transition-colors duration-500 dark:border-slate-800 dark:bg-[#020617]"
>
  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-12 md:grid-cols-4 lg:gap-24">
      <div class="col-span-2 space-y-6 md:col-span-1">
        <div class="group flex cursor-default items-center gap-2">
          <div
            class="rounded-xl bg-blue-600 p-2 shadow-lg shadow-blue-200 transition-transform group-hover:scale-110 dark:shadow-none"
          >
            <Code2 class="h-6 w-6 text-white" />
          </div>
          <span
            class="text-2xl font-black tracking-tight text-slate-900 dark:text-white"
          >
            Mambo<span class="text-blue-600">Dev</span>
          </span>
        </div>
        <p class="text-sm leading-relaxed text-slate-600 dark:text-slate-400">
          Artesanos del software construyendo experiencias digitales de alto
          impacto. Tu visión, potenciada por nuestra ingeniería.
        </p>
        <div class="flex gap-4">
          <a
            href="#"
            class="rounded-lg bg-slate-100 p-2 text-slate-600 transition-all duration-300 hover:bg-blue-600 hover:text-white dark:bg-slate-800 dark:text-slate-400 dark:hover:bg-blue-600 dark:hover:text-white"
          >
            <span class="sr-only">GitHub</span>
            <Github class="h-5 w-5" />
          </a>
          <a
            href="#"
            class="rounded-lg bg-slate-100 p-2 text-slate-600 transition-all duration-300 hover:bg-blue-600 hover:text-white dark:bg-slate-800 dark:text-slate-400 dark:hover:bg-blue-600 dark:hover:text-white"
          >
            <span class="sr-only">LinkedIn</span>
            <Linkedin class="h-5 w-5" />
          </a>
        </div>
      </div>

      {
        Object.entries(footerLinks).map(([category, links]) => (
          <div class="space-y-6">
            <h3 class="text-xs font-bold tracking-[0.2em] text-blue-600 uppercase dark:text-blue-400">
              {category}
            </h3>
            <ul class="space-y-4">
              {links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="group flex items-center gap-1 text-sm text-slate-600 transition-colors hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400"
                  >
                    <span class="relative">
                      {link.label}
                      <span class="absolute bottom-0 left-0 h-[1px] w-0 bg-blue-600 transition-all group-hover:w-full" />
                    </span>
                    {link.href.startsWith("http") && (
                      <ExternalLink class="h-3 w-3 opacity-0 transition-opacity group-hover:opacity-100" />
                    )}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class="mt-16 flex flex-col items-center justify-between gap-6 border-t border-slate-100 pt-8 sm:flex-row dark:border-slate-800"
    >
      <div class="flex flex-col items-center gap-1 sm:items-start">
        <p class="text-xs font-medium text-slate-500 dark:text-slate-500">
          © {currentYear} MamboDev. Todos los derechos reservados.
        </p>
        <p class="text-[10px] text-slate-400 dark:text-slate-600">
          Diseñado con pasión por Carlos & Alejandro.
        </p>
      </div>

      <div
        class="flex items-center gap-2 rounded-full border border-emerald-100 bg-emerald-50 px-3 py-1 dark:border-emerald-800 dark:bg-emerald-900/20"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="absolute inline-flex h-full w-full animate-ping rounded-full bg-emerald-400 opacity-75"
          ></span>
          <span class="relative inline-flex h-2 w-2 rounded-full bg-emerald-500"
          ></span>
        </span>
        <span
          class="text-[10px] font-bold tracking-tighter text-emerald-700 uppercase dark:text-emerald-400"
          >Sistemas Operativos</span
        >
      </div>
    </div>
  </div>
</footer>
