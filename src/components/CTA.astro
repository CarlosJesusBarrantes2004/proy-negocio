---
// 1. Script Frontmatter (Se ejecuta en el servidor/build time)

// Importamos el componente React Button
import { Button } from "../components/ui/button";
// Importamos los íconos de Lucide (Componentes React)
import { ArrowRight, Mail } from "lucide-react";
---

<section id="contacto" class="py-20 md:py-32">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div
      class="from-primary/20 via-card to-card border-border relative overflow-hidden rounded-3xl border bg-gradient-to-br p-8 md:p-16"
    >
      <div
        class="bg-primary/10 absolute top-0 right-0 h-96 w-96 translate-x-1/4 -translate-y-1/4 rounded-full blur-3xl"
      >
      </div>

      <div class="relative text-center">
        <h2
          class="text-foreground text-3xl font-bold text-balance sm:text-4xl lg:text-5xl"
        >
          ¿Listo para transformar tu idea en realidad?
        </h2>
        <p class="text-muted-foreground mx-auto mt-6 max-w-2xl text-lg">
          Cuéntanos sobre tu proyecto y te ayudamos a encontrar la mejor
          solución tecnológica para tu negocio.
        </p>

        {
          /* Botones (Usando el componente React Button renderizado estáticamente) */
        }
        <div class="mt-10 flex flex-col justify-center gap-4 sm:flex-row">
          <Button size="lg" className="gap-2">
            <Mail className="h-4 w-4" />
            Solicitar Cotización
          </Button>

          <Button size="lg" variant="outline" className="gap-2 bg-transparent">
            Agendar Llamada
            <ArrowRight className="h-4 w-4" />
          </Button>
        </div>

        <p class="text-muted-foreground mt-8 text-sm">
          Respuesta garantizada en menos de 24 horas
        </p>
      </div>
    </div>
  </div>
</section>
