---
// 1. Script Frontmatter (Se ejecuta en el servidor/build time)

// Definición de datos
const stats = [
  { value: "50+", label: "Proyectos completados" },
  { value: "98%", label: "Clientes satisfechos" },
  { value: "3x", label: "Más rápido al mercado" },
  { value: "24/7", label: "Soporte continuo" },
];
---

<section class="border-border bg-card/50 border-y py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {
        /* Usamos el map directamente en la plantilla, pero usamos 'class' en lugar de 'className' */
      }
      {
        stats.map((stat, index) => (
          <div key={index} class="text-center">
            <div class="text-foreground text-3xl font-bold sm:text-4xl">
              {stat.value}
            </div>
            <div class="text-muted-foreground mt-2 text-sm">{stat.label}</div>
          </div>
        ))
      }
    </div>
  </div>
</section>
